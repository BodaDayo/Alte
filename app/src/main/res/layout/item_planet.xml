<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/dimen_8"
    android:layout_margin="@dimen/dimen_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dimen_56"
            android:layout_height="@dimen/dimen_56">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circular_primary_background" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userAvatarPlanet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2sp"
                android:src="@drawable/asset10" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usernamePlanet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="NameUse001"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/fullNamePlanet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="NameBond Full"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>