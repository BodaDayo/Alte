<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_4"
    app:cardCornerRadius="@dimen/dimen_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dimen_56"
            android:layout_height="@dimen/dimen_56">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userAvatarInvites"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_icon"
                app:civ_border_color="?attr/colorPrimary"
                app:civ_border_width="@dimen/dimen_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_8"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usernameInvites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                tools:text="NameUse001" />

            <TextView
                android:id="@+id/statusInvitesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Online" />
        </LinearLayout>

        <TextView
            android:id="@+id/withdrawTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:text="@string/withdraw_request"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</androidx.cardview.widget.CardView>